<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:weightSum="3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/space_big">
        <sg.vinova.noticeboard.widgets.AppTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_normal"
            android:text="@string/noticeboard"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_header"
            app:etv_font="medium" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/tackit_splash" />
            <sg.vinova.noticeboard.widgets.AppTextView
                android:layout_gravity="top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TM"
                android:textColor="@android:color/white"
                app:etv_font="medium" />
        </LinearLayout>

            <sg.vinova.noticeboard.widgets.AppTextView
                android:layout_marginTop="@dimen/space_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/connecting_residents"
                android:textColor="@color/yellow_text"
                android:textSize="@dimen/text_size_connecting"
                app:etv_font="medium" />
    </LinearLayout>

</LinearLayout>