<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">



    <android.support.v7.widget.RecyclerView
        android:layout_marginBottom="@dimen/height_footer_bar"
        android:id="@+id/rvPhoneDirectory"
        tools:listitem="@layout/item_phone_directory"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>
    <include
        android:id="@+id/lycc"
        layout="@layout/include_footer_info"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_footer_bar"/>

</RelativeLayout>