<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lnMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/margin_biggest">

            <LinearLayout
                android:id="@+id/lnRad"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_footer_bar"
                android:layout_marginTop="@dimen/space_big"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/space_normal"
                android:paddingRight="@dimen/space_normal"
                android:weightSum="3">

                <RadioGroup
                    android:id="@+id/grSaleRent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rdSale"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bg_white_radius_left"
                        android:button="@null"
                        android:checked="true"
                        android:gravity="center"
                        android:text="Sale"
                        android:textAllCaps="false"
                        android:textColor="@drawable/radio_button_text"
                        android:textSize="@dimen/text_size_normal"
                        android:textStyle="bold"
                        tools:checked="true" />

                    <RadioButton
                        android:id="@+id/rdRent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bg_white_radius_right"
                        android:button="@null"
                        android:gravity="center"
                        android:text="Rent"
                        android:textAllCaps="false"
                        android:textColor="@drawable/radio_button_text"
                        android:textSize="@dimen/text_size_normal"
                        android:textStyle="bold"
                        tools:checked="false" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lnRad"
                android:orientation="vertical"
                android:paddingBottom="@dimen/space_normal"
                android:paddingLeft="@dimen/space_normal"
                android:paddingRight="@dimen/space_normal">

                <LinearLayout
                    android:layout_marginTop="@dimen/space_normal"
                    android:id="@+id/lnDescriptionFrame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <sg.vinova.noticeboard.widgets.AppTextView
                        style="@style/GrayTextNormal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="@string/write_something" />

                    <sg.vinova.noticeboard.widgets.AppEditText
                        android:id="@+id/edtItemDescription"
                        style="@style/WhiteEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_normal"
                        android:background="@drawable/bg_white_round"
                        android:gravity="top"
                        android:lines="5"
                        android:maxLines="5"
                        tools:text="iphone 6" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnSizeBlock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_normal"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/lnSize"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <sg.vinova.noticeboard.widgets.AppTextView
                            android:id="@+id/tvTitleBedroom"
                            style="@style/GrayTextNormal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No. of Bedroom" />

                        <sg.vinova.noticeboard.widgets.AppEditText
                            android:id="@+id/edNoBedroom"
                            style="@style/WhiteEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:lines="1"
                            android:maxLines="1"
                            tools:text="5" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lnSizeFrame"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_normal"
                        android:orientation="vertical">

                        <sg.vinova.noticeboard.widgets.AppTextView
                            android:id="@+id/tvTitleSize"
                            style="@style/GrayTextNormal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Size(sqft)" />

                        <sg.vinova.noticeboard.widgets.AppEditText
                            android:id="@+id/edSize"
                            style="@style/WhiteEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:lines="1"
                            android:maxLines="1"
                            tools:text="500" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnPriceFrame"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_normal"
                    android:orientation="vertical">

                    <sg.vinova.noticeboard.widgets.AppTextView
                        android:id="@+id/tvTitlePrice"
                        style="@style/GrayTextNormal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price(S$)" />

                    <sg.vinova.noticeboard.widgets.AppEditText
                        android:id="@+id/edPrice"
                        style="@style/WhiteEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:lines="1"
                        android:maxLines="1"
                        tools:text="500" />
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_normal">

                </android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <include
        layout="@layout/include_footer_photo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_footer_bar" />
</LinearLayout>