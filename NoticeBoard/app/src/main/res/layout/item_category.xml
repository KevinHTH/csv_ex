<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/divider_category"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@color/red"
        android:id="@+id/lnItemCategory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivCate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <View
            android:id="@+id/viewTran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black_transparent" />
<LinearLayout
    android:layout_alignParentBottom="true"
    android:orientation="vertical"
   android:padding="@dimen/margin_big"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="@dimen/space_small"
        android:paddingLeft="@dimen/space_small">

        <ImageView
            tools:background="@mipmap/tackit_grid"
            android:id="@+id/imgIconCate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <sg.vinova.noticeboard.widgets.AppTextView
            android:paddingLeft="@dimen/space_small"
            android:paddingRight="@dimen/space_small"
            android:id="@+id/tvTypeCate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_category"
            app:etv_font="medium"
            tools:text="Residents" />

    </LinearLayout>

    <sg.vinova.noticeboard.widgets.AppTextView
        android:visibility="invisible"
        android:layout_gravity="right"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:id="@+id/tvCount"
        android:background="@drawable/bg_circle_red"
        tools:text="20"
        tools:visibility="visible"
        style="@style/CountCircle"
        android:layout_width="@dimen/width_circle_count"
        android:layout_height="@dimen/height_circle_count" />
</LinearLayout>



    </RelativeLayout>

</FrameLayout>