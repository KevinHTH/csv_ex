<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/pic3"
    tools:context="uel.vteam.belovedhostel.view.RegisterActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/activity_login_margintop">

        <EditText
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:id="@+id/editRPhone"
            android:hint="@string/hint_phone"
            android:textColorHint="#8B8989"
            android:layout_gravity="center_horizontal"
            android:inputType="phone"
            tools:ignore="NestedWeights"
            android:background="@null" />

        <Spinner
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:id="@+id/spinnerPhoneCode" />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/txtUnderline1"
        android:background="#000000" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="center_vertical">

        <EditText
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/editRName"
            android:hint="@string/hint_name"
            android:textColorHint="#8B8989"
            tools:ignore="NestedWeights"
            android:background="@null" />
        <Button
            android:text="@string/button_cleartext_label"
            android:visibility="invisible"
            android:layout_height="wrap_content"
            android:id="@+id/btnClearText1"
            android:background="@null"
            android:layout_width="40dp" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/txtUnderline2"
        android:background="#000000" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editREmail"
            android:layout_weight="1"
            android:hint="@string/hint_email"
            tools:ignore="NestedWeights"
            android:background="@null" />
        <Button
            android:text="@string/button_cleartext_label"
            android:visibility="invisible"
            android:layout_height="wrap_content"
            android:id="@+id/btnClearText2"
            android:background="@null"
            android:layout_width="40dp" />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/txtUnderline3"
        android:background="#000000" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="center_vertical">

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editRPassword"
            android:hint="@string/hint_password"
            android:textColorHint="#8B8989"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            tools:ignore="NestedWeights"
            android:background="@null" />

        <Button
            android:text="@string/button_cleartext_label"
            android:visibility="invisible"
            android:layout_height="wrap_content"
            android:id="@+id/btnClearText3"
            android:background="@null"
            android:layout_width="40dp" />

        <Button
            android:text="@string/button_showpass"
            android:layout_width="46dp"
            android:layout_height="match_parent"
            android:id="@+id/btnShowPass"
            android:background="@null" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/txtUnderline4"
        android:background="#000000" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtRNotify"
            android:visibility="invisible"
            android:layout_gravity="center_horizontal"
            android:textColor="#fa2727" />

    </LinearLayout>
    <Button
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_height="40dp"
        android:text="@string/button_register"
        android:id="@+id/btnRegister"
        android:background="@drawable/selector_button_blue_color"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_width="140dp" />

</LinearLayout>
